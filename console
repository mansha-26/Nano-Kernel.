#ifndef CONSOLE_H
#define CONSOLE_H

#include <stdint.h>

// Colors for VGA text mode
typedef enum {
    COLOR_BLACK = 0,
    COLOR_BLUE = 1,
    COLOR_GREEN = 2,
    COLOR_CYAN = 3,
    COLOR_RED = 4,
    COLOR_MAGENTA = 5,
    COLOR_BROWN = 6,
    COLOR_LIGHT_GRAY = 7,
    COLOR_DARK_GRAY = 8,
    COLOR_LIGHT_BLUE = 9,
    COLOR_LIGHT_GREEN = 10,
    COLOR_LIGHT_CYAN = 11,
    COLOR_LIGHT_RED = 12,
    COLOR_LIGHT_MAGENTA = 13,
    COLOR_YELLOW = 14,
    COLOR_WHITE = 15
} vga_color_t;

// Console functions
void console_init(void);
void console_clear(void);
void console_set_color(uint8_t color);
void console_print(const char *str);
void console_print_char(char c);
void console_print_int(int num);

// Keyboard functions (simulated for now)
char keyboard_read(void);
int keyboard_available(void);

#endif
